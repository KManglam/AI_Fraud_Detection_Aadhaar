# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1

# Supabase PostgreSQL Database
# Get this from: Supabase Dashboard -> Project Settings -> Database -> Connection string (URI)
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_STORAGE_BUCKET=aadhaar-documents

# REQUIRED: Supabase JWT Secret for secure token verification
# Get from: Supabase Dashboard -> Project Settings -> API -> JWT Secret
# This enables fast local JWT verification without network calls
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Enable Supabase Storage (set to false to use local storage)
USE_SUPABASE_STORAGE=true

# CORS - comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://aadhar-auth-system.vercel.app

# Superuser auto-creation (for deployments without terminal access)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your-secure-password
DJANGO_SUPERUSER_NAME=Admin User
